{
  "name": "@configjs/cli",
  "version": "1.1.18",
  "type": "module",
  "description": "Configure your frontend stack, instantly - Utilitaire CLI d'installation modulaire de bibliothÃ¨ques frontend",
  "keywords": [
    "cli",
    "react",
    "nextjs",
    "vue",
    "installer",
    "configuration",
    "setup",
    "boilerplate",
    "automation",
    "frontend",
    "typescript",
    "vite"
  ],
  "author": "Julien",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-lin/configjs.git"
  },
  "bugs": {
    "url": "https://github.com/julien-lin/configjs/issues"
  },
  "homepage": "https://github.com/julien-lin/configjs#readme",
  "bin": {
    "confjs": "./dist/cli.js",
    "configjs": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsup src/cli.ts --format esm --watch --sourcemap",
    "build": "tsup src/cli.ts --format esm --dts --clean",
    "build:watch": "tsup src/cli.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:security": "vitest run tests/security",
    "test:performance": "vitest run tests/performance",
    "perf:check": "vitest run tests/performance --reporter=json --outputFile=performance-report.json || true",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run test:unit && npm run test:security && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/parser": "^7.28.6",
    "@iarna/toml": "^2.2.5",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "type-fest": "^5.3.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "memfs": "^4.51.1",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
